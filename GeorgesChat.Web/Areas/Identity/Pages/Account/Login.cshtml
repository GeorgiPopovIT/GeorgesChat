@page
@model LoginModel

@{
	Layout = "_IdentityLayout";
	ViewData["Title"] = "Log in";
}

<div class="row">
	<div class="col-md-4 offset-4">
		<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

			<h1 class="h3 mb-3 fw-normal">Please sign in</h1>
			<i class="fas fa-comments-alt"></i>
			<div class="form-floating">
				<input asp-for="Input.Email" class="form-control" placeholder="name@example.com">
				<label asp-for="Input.Email">Email address</label>
			</div>
			<div class="form-floating">
				<input asp-for="Input.Password" class="form-control" id="floatingPassword" placeholder="Password">
				<label asp-for="Input.Password">Password</label>
			</div>
			<div class="form-group">
				<div class="checkbox">
					<label asp-for="Input.RememberMe">
						<input asp-for="Input.RememberMe" />
						@Html.DisplayNameFor(m => m.Input.RememberMe)
					</label>
				</div>
			</div>
			<button type="submit" class="w-100 btn btn-lg btn-primary">Sign in</button>
			<p class="mt-5 mb-3 text-muted">&copy; @DateTime.UtcNow.Year</p>
		</form>
	</div>
</div>


@section Scripts {
	<partial name="_ValidationScriptsPartial" />
		}
